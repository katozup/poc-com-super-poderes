FROM node:12-alpine AS build
RUN echo ---- Dockerfile promoter itaucard ----

ARG envProfile

WORKDIR /app
COPY . .

RUN yarn install
# RUN yarn run build:${envProfile}
RUN yarn nx build itau-mgm-promoter-itaucard --${envProfile}

FROM nginx:stable-alpine

WORKDIR /

COPY --from=build /app/dist/apps/itau-mgm-promoter-itaucard /var/www
COPY ./nginx.conf /etc/nginx/conf.d/default.conf

CMD nginx -g 'daemon off;'
